<?xml version="1.0" encoding="utf-8"?>
<com.voxed.ui.views.VoxItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="2dp"
        android:id="@+id/view_vox_item_container"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:id="@+id/view_vox_item_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:background="@color/colorBlackTransparent"
                android:padding="@dimen/app_small_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/view_vox_item_category_textview"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:background="@drawable/drawable_rnd_corner_category_background"
                    android:textColor="@color/colorWhite"
                    android:padding="@dimen/app_small_padding"
                    tools:text="RPG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_chat_bubble_white_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/view_vox_item_comment_textview"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="@dimen/app_small_padding"
                        tools:text="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/view_vox_item_title_textview"
                android:background="@color/colorBlackTransparent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/app_small_padding"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Titulo del Vox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</com.voxed.ui.views.VoxItemView>